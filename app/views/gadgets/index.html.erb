<%- model_class = Gadget -%>
<div class="page-header">
  <h1><%=t '.title', :default => Gadget %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:brand) %></th>
      <th><%= model_class.human_attribute_name(:model) %></th>
      <th><%= model_class.human_attribute_name(:model_no) %></th>
      <th><%= model_class.human_attribute_name(:gunny_id) %></th>
      <th><%= model_class.human_attribute_name(:mx_id) %></th>
      <th><%= model_class.human_attribute_name(:device_name) %></th>
      <th><%= model_class.human_attribute_name(:os) %></th>
      <th><%= model_class.human_attribute_name(:os_version) %></th>
      <th><%= model_class.human_attribute_name(:comments) %></th>
      <th><%= model_class.human_attribute_name(:current_user) %></th>
      <th><%= model_class.human_attribute_name(:last_user) %></th>
      <th><%= model_class.human_attribute_name(:format) %></th>
      <th><%= model_class.human_attribute_name(:home_location) %></th>
      <th><%= model_class.human_attribute_name(:available) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @gadgets.each do |gadget| %>
      <tr>
        <td><%= gadget.id %></td>
        <td><%= gadget.brand %></td>
        <td><%= gadget.model %></td>
        <td><%= gadget.model_no %></td>
        <td><%= gadget.gunny_id %></td>
        <td><%= gadget.mx_id %></td>
        <td><%= gadget.device_name %></td>
        <td><%= gadget.os %></td>
        <td><%= gadget.os_version %></td>
        <td><%= gadget.comments %></td>
        <td><%= gadget.current_user %></td>
        <td><%= gadget.last_user %></td>
        <td><%= gadget.format %></td>
        <td><%= gadget.home_location %></td>
        <td><%= gadget.available %></td>
        <td><%=l gadget.created_at, format: :long %></td>
        <td>
          <%= link_to gadget_path(gadget), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to gadget_path(gadget), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_gadget_path,
            :class => 'btn btn-primary' %>
