<%= simple_form_for(@gadget) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :brand %>
    <%= f.input :model %>
    <%= f.input :model_no %>
    <%= f.input :gunny_id %>
    <%= f.input :mx_id %>
    <%= f.input :device_name %>
    <%= f.input :os %>
    <%= f.input :os_version %>
    <%= f.input :comments %>
    <%= f.input :current_user %>
    <%= f.input :last_user %>
    <%= f.input :format %>
    <%= f.input :home_location %>
    <%= f.input :available %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
